<div class="product-card-wrapper">
    <div>
        @if (!string.IsNullOrWhiteSpace(Product.ImageUrl))
        {
            <img class="product-image" src="@($"{BaseUrl}{Product.ImageUrl}")" />
        }
    </div>
    <div class="product-details">
        <h3>@Product.Name</h3>
        <p>@Product.Description</p>
        <p>Price: @Product.Price</p>
    </div>
    <div class="product-actions">
        <button class="action-button" @onclick="() => OnEdit.InvokeAsync(Product)">Edit</button>
        <button class="action-button" @onclick="() => OnDelete.InvokeAsync(Product)">Delete</button>
    </div>
</div>