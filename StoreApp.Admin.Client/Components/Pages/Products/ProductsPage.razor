@page "/products"

<h3>Products list</h3>

@if (products is null)
{
    <p>Loading...</p>
}
else if (!products.Any())
{
    <p>No products available</p>
}
else
{
    <ul>
        @foreach (var product in products)
        {
            <li @key="product">
                <strong>@product.Name</strong> — @product.Price UAH
            </li>
        }
    </ul>
}
